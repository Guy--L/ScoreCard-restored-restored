<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    @*<meta name="viewport" content="width=device-width">*@
    <title>@ViewBag.Title - ICO ScoreCard</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/dataTables")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-inner">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">ICO Global Value</a>
                @*@Html.ActionLink("P&G ICO Global Value", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-fixed-top">
                    <li>@Html.ActionLink("FY "+(string)ViewBag.FY+" Card", "Index", "Home")</li>
                    @if (ViewBag.Worker != null && ViewBag.Worker.IsAdmin)
                    {
                        <li>@Html.ActionLink("Users", "Workers", "Admin")</li>
                    }
                </ul>
                <p class="nav navbar-text navbar-right"><i class="fa fa-user"></i> Welcome @User.Identity.Name</p>
            </div>
        </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - P&amp;G ICO Global Value Tracking
            <em class="pull-right"><small><a href="mailto:mark@steinersoftware.com">powered by Steiner Consulting</a></small></em>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Html.Raw(JSNLog.JavascriptLogging.Configure())
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/jquerymask")
    @RenderSection("scripts", required: false)
</body>
</html>
