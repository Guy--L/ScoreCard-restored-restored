<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    @*<meta name="viewport" content="width=device-width">*@
    <title>@ViewBag.Title - ICO ScoreCard</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/dataTables")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-logo">
                    <a class="navbar-brand" rel="home" href="http://www.pg.com" title="P&amp;G">
                        <img src="~/Content/logo.png">
                    </a>
                    <a class="navbar-link" rel="home" href="@Url.Action("Index", "Home")" title="Home">
                        ICO Global Value
                    </a>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><h3><div class="label label-large label-success">
                    @if (ViewBag.Prior)
                    {
                        <a href="#" class="yearnav" id="prioryr" title="go to prior year"><i class="fa fa-chevron-circle-left"></i></a>
                    }
                    &nbsp;FY @ViewBag.FY ScoreCard&nbsp;
                    @if (ViewBag.Next)
                    {
                        <a href="#" class="yearnav" id="nextyr" title="go to next year">
                            <i class="fa fa-chevron-circle-right"></i>
                        </a>
                    }
                    </div></h3>
                    </li>
                    @if (ViewBag.CoverLetter != null)
                    {
                        <li><a class="navbar-link" href='@Url.Content(ViewBag.CoverLetter)'>Cover Letter</a></li>
                    }
                    @if (ViewBag.Worker != null && ViewBag.Worker.IsAdmin)
                    {
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown">Administer <span class="caret"></span></a>
                            <ul class="dropdown-menu navbar-inverse">
                                <li>@Html.ActionLink("Users", "Workers", "Admin")</li>
                                <li>@Html.ActionLink("Initialize Year", "AddYear", "Admin")</li>
                                <li>@Html.ActionLink("Upload PDF Cover Letter for "+(string)ViewBag.FY, "Upload", "Admin")</li>
                            </ul>
                        </li>
                    }
                    <li></li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    <li id="undo">
                        <a href="#" class="urdo" title="Undo edits">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-undo fa-stack-2x"></i>
                                <strong class="fa-stack-1x text-success undo-text">0</strong>
                            </span>
                        </a>
                    </li>
                    <li id="redo">
                        <a href="#" class="urdo" title="Redo edits">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-repeat fa-stack-2x"></i>
                                <strong class="fa-stack-1x text-success repeat-text">0</strong>
                            </span>
                        </a>
                    </li>
                    <li><a href="#"><i class="fa fa-user"></i> Welcome @User.Identity.Name</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - P&amp;G ICO Global Value Tracking
            <em class="pull-right"><small>@ViewBag.version</small></em>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/jquerymask")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(function () {
            $("a.yearnav").on("click", function () {
                if ($(this).attr('id')=='nextyr')
                    location.href = '@Url.Action("Index", "Home", null, Request.Url.Scheme)/' + (@ViewBag.Year+1);
                else
                    location.href = '@Url.Action("Index", "Home", null, Request.Url.Scheme)/' + (@ViewBag.Year-1);
            });
        });
    </script>
</body>
</html>
